<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - موقع الشركة</title>

    <!-- Bootstrap RTL -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }

        footer {
            background-color: #f8f9fa;
            margin-top: auto;
        }

        .page-wrapper {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .main-content {
            flex: 1;
        }
    </style>
</head>
<body>
    <div class="page-wrapper">
        <!-- Header / Navbar -->
        <header id="header">
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <div class="container">

                    <a class="navbar-brand" href="/">
                        <i class="bi bi-building me-2"></i>
                        <strong>الذكاء الثالث</strong>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link"  asp-controller="Account" asp-action="Index">
                                    <i class="bi bi-house me-1"></i>الصفحة الرئيسية
                                </a>
                            </li>
                        </ul>

                        <!-- قائمة المستخدم -->
                        <ul class="navbar-nav">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <!-- قائمة الأدمن -->
                                @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" role="button"
                                           data-bs-toggle="dropdown">
                                            <i class="bi bi-gear me-1"></i>الإدارة
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <a class="dropdown-item" asp-controller="Contact"
                                                   asp-action="Index">
                                                    <i class="bi bi-envelope-open me-2"></i>الرسائل
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-controller="News"
                                                   asp-action="Index">
                                                    <i class="bi bi-newspaper me-2"></i>الأخبار
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-controller="Projects"
                                                   asp-action="Index">
                                                    <i class="bi bi-briefcase me-2"></i>المشاريع
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                }

                                <!-- قائمة الحساب -->
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button"
                                       data-bs-toggle="dropdown">
                                        <i class="bi bi-person-circle me-1"></i>@User.Identity.Name
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Account"
                                               asp-action="Profile">
                                                <i class="bi bi-person me-2"></i>الملف الشخصي
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Account"
                                               asp-action="ChangePassword">
                                                <i class="bi bi-key me-2"></i>تغيير كلمة المرور
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-controller="Account" asp-action="Logout" method="post"
                                                  style="display:inline;">
                                                <button type="submit" class="dropdown-item text-danger">
                                                    <i class="bi bi-box-arrow-left me-2"></i>تسجيل الخروج
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <!-- Main Content -->
        <main class="main-content container my-5">
            @RenderBody()
        </main>

      
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>