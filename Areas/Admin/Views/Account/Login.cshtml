@model NpsProject.Models.ViewModels.LoginViewModel


@{
    ViewData["Title"] = "تسجيل الدخول";
}



<div class="container my-5">
    <div class="row justify-content-center ">
        <div class="col-md-9 col-xl-7 mt-5 pt-5">
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <!-- الشعار والعنوان -->
                    <div class="text-center mb-4">
                        <i class="bi bi-shield-lock-fill text-primary" style="font-size: 3rem;"></i>
                        <h2 class="mt-3 ">تسجيل الدخول</h2>
                        <p class="text-muted">أدخل بياناتك للوصول إلى لوحة التحكم</p>
                    </div>

                    <form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <!-- البريد الإلكتروني -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                البريد الإلكتروني
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg"
                                   placeholder="example@company.com" autofocus />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- كلمة المرور -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">
                               كلمة المرور
                            </label>
                            <input asp-for="Password" class="form-control form-control-lg"
                                   placeholder="••••••••" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- تذكرني -->
                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                            <label asp-for="RememberMe" class="form-check-label">
                                تذكرني
                            </label>
                        </div>

                        <!-- زر تسجيل الدخول -->
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-left me-2"></i>تسجيل الدخول
                            </button>
                        </div>

                        <!-- روابط إضافية -->
                      @*   <div class="text-center">
                            <a asp-action="ForgotPassword" class="text-decoration-none">
                                نسيت كلمة المرور؟
                            </a>
                        </div> *@

                    </form>
                </div>
            </div>

            <!-- معلومات الحساب التجريبي (للاختبار فقط) -->
            @if (Context.Request.Host.Host == "localhost")
            {
                <div class="alert alert-info mt-3">
                    <h6 class="alert-heading">
                        <i class="bi bi-info-circle me-2"></i>حساب تجريبي:
                    </h6>
                    <p class="mb-0">
                        <strong>البريد:</strong> admin@company.com<br>
                        <strong>كلمة المرور:</strong> Admin@123
                    </p>
                </div>
            }
        </div>
    </div>
</div>


  @section scripts {

    <script src="~/lib/swiper/swiper-bundle.min.js" asp-append-version="true"></script>
    @* <script>
      AOS.init();
    </script> *@

    <!-- Main JS File -->
    <script src="~/js/main.js" asp-append-version="true"></script>
    @{

        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
    
}