@model IEnumerable<NpsProject.Models.Project>

@{
    ViewData["Title"] = "إدارة المشاريع";
    var currentPage = (int)ViewBag.CurrentPage;
    var totalPages = (int)ViewBag.TotalPages;
    var currentFilter = (string)ViewBag.CurrentFilter;
}

<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-2">
            <i class="bi bi-briefcase me-2"></i>إدارة المشاريع
        </h2>
        <p class="text-muted mb-0">
            إجمالي: <strong>@ViewBag.TotalProjects</strong> مشروع
        </p>
    </div>
    <a asp-action="Create" class="btn btn-primary btn-lg">
        <i class="bi bi-plus-circle me-2"></i>إضافة مشروع جديد
    </a>
</div>

<!-- Alerts -->
@if (TempData["SuccessMessage"] != null)
{
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
}
@if (TempData["ErrorMessage"] != null)
{
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
}

<!-- Stats Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm text-center">
            <div class="card-body">
                <div class="display-6 text-primary mb-2">@ViewBag.TotalProjects</div>
                <small class="text-muted">إجمالي المشاريع</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm text-center">
            <div class="card-body">
                <div class="display-6 text-success mb-2">@ViewBag.ActiveCount</div>
                <small class="text-muted">نشطة</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm text-center">
            <div class="card-body">
                <div class="display-6 text-danger mb-2">@ViewBag.InactiveCount</div>
                <small class="text-muted">غير نشطة</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm text-center">
            <div class="card-body">
                <div class="display-6 text-info mb-2">@ViewBag.RecentCount</div>
                <small class="text-muted">هذا الشهر</small>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <div class="d-flex flex-wrap gap-2 align-items-center">
            <span class="text-muted me-2"><i class="bi bi-funnel me-1"></i>فلترة:</span>
            <a asp-action="Index" asp-route-page="1" asp-route-filter="all"
               class="btn btn-sm @(currentFilter == "all" ? "btn-primary" : "btn-outline-primary")">
                <i class="bi bi-grid me-1"></i>الكل (@ViewBag.TotalProjects)
            </a>
            <a asp-action="Index" asp-route-page="1" asp-route-filter="active"
               class="btn btn-sm @(currentFilter == "active" ? "btn-success" : "btn-outline-success")">
                <i class="bi bi-check-circle me-1"></i>نشطة (@ViewBag.ActiveCount)
            </a>
            <a asp-action="Index" asp-route-page="1" asp-route-filter="inactive"
               class="btn btn-sm @(currentFilter == "inactive" ? "btn-danger" : "btn-outline-danger")">
                <i class="bi bi-x-circle me-1"></i>غير نشطة (@ViewBag.InactiveCount)
            </a>
            <a asp-action="Index" asp-route-page="1" asp-route-filter="recent"
               class="btn btn-sm @(currentFilter == "recent" ? "btn-info" : "btn-outline-info")">
                <i class="bi bi-calendar-week me-1"></i>الأحدث (@ViewBag.RecentCount)
            </a>
        </div>
    </div>
</div>

<!-- Projects Grid -->
@if (!Model.Any())
{
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox display-1 text-muted mb-4"></i>
                <h4 class="text-muted">لا توجد مشاريع</h4>
                <p class="text-muted mb-4">@(currentFilter != "all" ? "جرب فلتر آخر" : "ابدأ بإضافة مشروع جديد")</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>إضافة مشروع
                </a>
            </div>
        </div>
}
else
{
        <div class="row g-4 mb-4">
        @foreach (var project in Model)
        {
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 border-0 shadow-sm hover-card">
                            <!-- الصورة -->
                            <div class="position-relative" style="height: 220px; overflow: hidden;">
                        @if (!string.IsNullOrEmpty(project.ImageUrl))
                        {
                                        <img src="@project.ImageUrl" class="card-img-top h-100 w-100" 
                                             style="object-fit: cover;" alt="@project.Title">
                        }
                        else
                        {
                                        <div class="bg-light d-flex align-items-center justify-content-center h-100">
                                            <i class="bi bi-image display-1 text-muted"></i>
                                        </div>
                        }

                                <!-- Badge الحالة -->
                                <div class="position-absolute top-0 end-0 m-3">
                            @if (project.IsActive)
                            {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>نشط
                                            </span>
                            }
                            else
                            {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle me-1"></i>غير نشط
                                            </span>
                            }
                                </div>
                            </div>

                            <div class="card-body d-flex flex-column">
                                <!-- العنوان -->
                                <h5 class="card-title mb-2">@project.Title</h5>

                                <!-- الوصف -->
                                <p class="card-text text-muted small flex-grow-1">
                            @if (project.Description.Length > 100)
                            {
                                @(project.Description.Substring(0, 100) + "...")
                            }
                            else
                            {
                                @project.Description
                            }
                                </p>

                                <!-- التاجات -->
                        @if (!string.IsNullOrEmpty(project.Tags))
                        {
                                        <div class="mb-3">
                                @foreach (var tag in project.GetTagsList().Take(3))
                                {
                                                    <span class="badge bg-secondary me-1">
                                                        <i class="bi bi-tag-fill me-1"></i>@tag
                                                    </span>
                                }
                                @if (project.GetTagsList().Count > 3)
                                {
                                                    <span class="badge bg-light text-dark">
                                                        +@(project.GetTagsList().Count - 3)
                                                    </span>
                                }
                                        </div>
                        }

                                <!-- معلومات إضافية -->
                                <div class="small text-muted mb-3">
                                    <div class="d-flex justify-content-between">
                                        <span>
                                            <i class="bi bi-calendar3 me-1"></i>
                                    @project.CreatedAt.ToString("dd/MM/yyyy")
                                        </span>
                                @if (project.CompletionDate.HasValue)
                                {
                                                <span>
                                                    <i class="bi bi-check2-circle me-1"></i>
                                        @project.CompletionDate.Value.ToString("MM/yyyy")
                                                </span>
                                }
                                    </div>
                                </div>

                                <!-- الأزرار -->
                                <div class="d-flex gap-2">
                                    <a asp-action="Details" asp-route-id="@project.Id" 
                                       class="btn btn-sm btn-outline-info flex-fill">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@project.Id" 
                                       class="btn btn-sm btn-outline-primary flex-fill">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-warning flex-fill"
                                            onclick="toggleActive(@project.Id, @project.IsActive.ToString().ToLower())"
                                            id="toggle-@project.Id">
                                        <i class="bi bi-@(project.IsActive ? "pause" : "play")"></i>
                                    </button>
                            @if (User.IsInRole("Admin"))
                            {
                                            <button type="button" class="btn btn-sm btn-outline-danger flex-fill"
                                                    onclick="deleteProject(@project.Id)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                            }
                                </div>
                            </div>
                        </div>
                    </div>
        }
        </div>

        <!-- Pagination -->
    @if (totalPages > 1)
    {
                <nav aria-label="تصفح المشاريع">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-filter="@currentFilter">
                                <i class="bi bi-chevron-right"></i> السابق
                            </a>
                        </li>

                @{
                    var startPage = Math.Max(1, currentPage - 2);
                    var endPage = Math.Min(totalPages, currentPage + 2);
                }

                @if (startPage > 1)
                {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="1" asp-route-filter="@currentFilter">1</a>
                                </li>
                    @if (startPage > 2)
                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }

                @for (var i = startPage; i <= endPage; i++)
                {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-filter="@currentFilter">@i</a>
                                </li>
                }

                @if (endPage < totalPages)
                {
                    @if (endPage < totalPages - 1)
                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@totalPages" asp-route-filter="@currentFilter">@totalPages</a>
                                </li>
                }

                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-filter="@currentFilter">
                                التالي <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
    }
}

<!-- نموذج حذف مخفي -->
<form id="deleteForm" method="post" asp-action="Delete" style="display:none;">
    <input type="hidden" name="id" id="deleteId" />
    <input type="hidden" name="currentPage" value="@currentPage" />
    <input type="hidden" name="currentFilter" value="@currentFilter" />
    @Html.AntiForgeryToken()
</form>

@section Scripts {
        <script>
            function deleteProject(id) {
                if (confirm('هل أنت متأكد من حذف هذا المشروع؟\n\nسيتم حذف الصورة أيضاً ولا يمكن التراجع عن هذا الإجراء.')) {
                    document.getElementById('deleteId').value = id;
                    document.getElementById('deleteForm').submit();
                }
            }

            function toggleActive(id, currentStatus) {
                const action = currentStatus ? 'إيقاف' : 'تفعيل';
                if (confirm(`هل أنت متأكد من ${action} هذا المشروع؟`)) {
                    fetch('@Url.Action("ToggleActive", "Projects", new { area = "Admin" })', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify({ id: id })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            location.reload();
                        } else {
                            alert('حدث خطأ: ' + data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('حدث خطأ في الاتصال');
                    });
                }
            }
        </script>
}

<style>
    .hover-card {
        transition: all 0.3s ease;
    }

    .hover-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
    }

    .hover-card img {
        transition: transform 0.3s ease;
    }

    .hover-card:hover img {
        transform: scale(1.05);
    }
</style>