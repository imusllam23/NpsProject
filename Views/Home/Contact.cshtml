@model NpsProject.Models.ContactMessage

@{
    ViewData["Title"] = "تواصل معنا";
}
<partial name="_TopHeader" />

<style>
    body {
        background-color: var( --light-backgroun);
    }
</style>
<div>
    <div class="container my-5" dir="rtl">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="card shadow rounded border-0">
                    <div class="card-body p-4">

                        <h2 class="mb-3 dark">تواصل معنا</h2>
                        <p class="text-muted mb-4">املأ النموذج أدناه وسنقوم بالرد عليك في أقرب وقت.</p>

                        <form asp-controller="Home" asp-action="SendMessage" id="contactForm" method="post" novalidate>
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label class="form-label">الاسم</label>
                                <input type="text" class="form-control" id="name" placeholder="ادخل اسمك">
                                <div class="text-danger small" id="err-name"></div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">البريد الإلكتروني</label>
                                <input type="email" class="form-control" id="email" placeholder="you@example.com">
                                <div class="text-danger small" id="err-email"></div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">الموضوع</label>
                                <input type="text" class="form-control" id="subject" placeholder="موضوع الرسالة">
                                <div class="text-danger small" id="err-subject"></div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">الرسالة</label>
                                <textarea class="form-control" id="message" rows="4" placeholder="اكتب رسالتك هنا..."></textarea>
                                <div class="text-danger small" id="err-message"></div>
                            </div>

                            <button type="submit" id="sendBtn" class="btn btn-gradient px-4">
                                إرسال
                            </button>

                            <div class="mt-3" id="status"></div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>



</div>
@section styles {
    <link href="~/css/about.css" rel="stylesheet" asp-append-version="true" />

}


@section scripts {
    <!-- lib JS Files -->
    <script src="~/lib/php-email-form/validate.js"></script>
    <script src="~/lib/aos/aos.js"></script>

    <script src="~/lib/glightbox/js/glightbox.min.js"></script>
    <script src="~/lib/purecounter/purecounter_vanilla.js"></script>
    <script src="~/lib/swiper/swiper-bundle.min.js"></script>
    @* <script>
      AOS.init();
    </script> *@

    <!-- Main JS File -->
    <script src="~/js/main.js"></script>
    <script src="~/js/about.js"></script>
}